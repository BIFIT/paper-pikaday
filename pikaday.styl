.pika-single
  z-index: 1;
  display: block;
  position: relative;

  &.is-hidden
    display: none;

  &.is-bound
    position: absolute;
    box-shadow: 0 5px 15px -5px rgba(0, 0, 0, .5);

  /*
  clear child float (pika-lendar), using the famous micro clearfix hack
  http://nicolasgallagher.com/micro-clearfix-hack/
  */
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

  .pika-lendar
    width: 360px;
    background-color: white;

    .pika-title
      position: relative;
      text-align: center;

    .pika-table
      table-layout: fixed;
      width: 100%;
      border-collapse: collapse;
      border-spacing: 0;
      border: 0;

      th
        color: #999;
        font-size: 12px;
        line-height: 25px;
        font-weight: bold;
        text-align: center;

      abbr
        border-bottom: none;
        cursor: help;

  select
    position: absolute;
    cursor: pointer;
    z-index: 9998;
    margin: 0;
    left: 0;
    top: 5px;
    opacity: 0;

  .pika-label
    display: inline-block;
    position: relative;
    z-index: 9999;
    overflow: hidden;
    margin: 0;
    padding: 5px 3px;
    font-size: 14px;
    line-height: 20px;
    font-weight: bold;
    background-color: #fff;

  .pika-prev,
  .pika-next
    display: block;
    cursor: pointer;
    position: relative;
    outline: none;
    border: 0;
    padding: 0;
    width: 20px;
    height: 30px;
    /* hide text using text-indent trick, using width value (it's enough) */
    text-indent: 20px;
    white-space: nowrap;
    overflow: hidden;
    background-color: transparent;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: 75% 75%;
    opacity: .5;

    &.is-disabled,
    &.is-disabled
      cursor: default;
      opacity: .2 !important;

    &:hover,
    &:hover
      opacity: 1;

  .pika-prev,
  .is-rtl .pika-next
    float: left;
    background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABQAAAAeCAYAAAAsEj5rAAAAUklEQVR42u3VMQoAIBADQf8Pgj+OD9hG2CtONJB2ymQkKe0HbwAP0xucDiQWARITIDEBEnMgMQ8S8+AqBIl6kKgHiXqQqAeJepBo/z38J/U0uAHlaBkBl9I4GwAAAABJRU5ErkJggg==');

  .pika-next,
  .is-rtl .pika-prev
    float: right;
    background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABQAAAAeCAYAAAAsEj5rAAAAU0lEQVR42u3VOwoAMAgE0dwfAnNjU26bYkBCFGwfiL9VVWoO+BJ4Gf3gtsEKKoFBNTCoCAYVwaAiGNQGMUHMkjGbgjk2mIONuXo0nC8XnCf1JXgArVIZAQh5TKYAAAAASUVORK5CYII=');

  .pika-select
    display: inline-block;

  .pika-button
    cursor: pointer;
    display: block;
    box-sizing: border-box;
    outline: none;
    border: none;
    margin: auto;
    text-align: center;
    background-color: transparent;
    padding: 0.5em;
    width: 2rem;
    height: 2rem;

  .pika-week
    font-size: 11px;
    text-align: center;
    color: #999;

  .is-today .pika-button
    color: #33aaff;
    font-weight: bold;

  .is-selected .pika-button
    background: #33aaff;
    color: #fff;
    border-radius: 50%;

  .is-inrange .pika-button
    background: #D5E9F7;

  .is-startrange .pika-button
    color: #fff;
    background: #6CB31D;
    box-shadow: none;

  .is-endrange .pika-button
    color: #fff;
    background: #33aaff;
    box-shadow: none;

  .is-disabled .pika-button
    pointer-events: none;
    cursor: default;
    color: #999;
    opacity: .3;

  .pika-lendar
    .drop-menu
      width: 160px;
      display: inline-block;

    .drop-menu > p
      text-align: center;
      margin: 0.5em 0 0 0;

    .footer
      paper-icon-button
        opacity: .5;

      paper-icon-button
        vertical-align: text-bottom;

      paper-icon-button:hover
        opacity: 1;

    .drop-menu paper-input-container
      padding: 0;

    paper-ripple.style-scope.paper-dropdown-menu
      display: block;
      height: 1.5rem;

    paper-material.dropdown-content.style-scope.paper-menu-button.x-scope.paper-material-0
      height: 200px;

  .flow-element
    display: inline-block;
    margin-right: 3em;
    vertical-align: top;

    input
      margin-top: 0;

    &:last-child
      margin-right: 0;

  button#datepicker-button
    margin-bottom: 3em;
